<% if (currUser) { %>
<!-- Profile Modal -->
<div
  class="modal fade"
  id="profileModal"
  tabindex="-1"
  aria-labelledby="profileModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="profileModalLabel">Your Profile</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p><strong>Username:</strong> <%= currUser.username %></p>
        <p><strong>Email:</strong> <%= currUser.email %></p>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const navbarCollapse = document.getElementById("navbarNavAltMarkup");

    let lastScrollTop = window.scrollY;

    window.addEventListener(
      "scroll",
      function () {
        // Only act if navbar is open
        if (navbarCollapse.classList.contains("show")) {
          const bsCollapse =
            bootstrap.Collapse.getInstance(navbarCollapse) ||
            new bootstrap.Collapse(navbarCollapse, { toggle: false });

          bsCollapse.hide(); // Collapse immediately
        }
      },
      { passive: true }
    ); // Passive scroll listener for better performance
  });
</script>
