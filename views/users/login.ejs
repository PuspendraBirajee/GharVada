<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h3 class="col-6 offset-3">Log In</h3>
  <div class="col-6 offset-3">
    <b
      ><p>New user ? <a href="/signup">Sign up</a></p></b
    >
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mb-3">Log in</button>
    </form>
  </div>
</div>
